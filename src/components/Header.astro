---
import { Button } from '@/components/ui/button';
import { LayoutDashboard, Menu } from 'lucide-react';

import ToggleMobileMenu from './ToggleMobileMenu';
import MobileMenu from './MobileMenu';
import { ModeToggle } from './ModeToggle';
---

<header class="sticky top-0 bg-background w-full">
    <div class="py-4 md:py-2 flex items-center justify-between">
        <div class="flex items-center space-x-4">
            <a href="/">
                <h1 class="text-2xl font-mono">redev0.</h1>
            </a>
        </div>
        <ToggleMobileMenu client:load />
        <nav class="hidden md:flex items-center space-x-4">
            <div>
                <a href="/docs"><Button className='font-light' variant={'link'}>Docs</Button></a>
                <a href="/pricing"><Button className='font-light' variant={'link'}>Pricing / FAQ</Button></a>
                <!-- <a href="/faq"><Button className='font-light' variant={'link'}>FAQ</Button></a> -->
            </div>
            <ModeToggle client:load />
            <a href="/dashboard"><Button className='font-light'>Dashboard <LayoutDashboard className='h-2/3' strokeWidth={2} absoluteStrokeWidth/></Button></a>
        </nav>
    </div>
    <div class="md:hidden absolute w-full">
        <MobileMenu client:load >
            <a href="/docs"><Button className='font-light' variant={'link'}>Docs</Button></a>
            <a href="/pricing"><Button className='font-light' variant={'link'}>Pricing / FAQ</Button></a>
            <a href="/dashboard"><Button className='font-light w-full'>Dashboard <LayoutDashboard className='h-2/3' strokeWidth={2} absoluteStrokeWidth/></Button></a>
        </MobileMenu>
    </div>
</header>
